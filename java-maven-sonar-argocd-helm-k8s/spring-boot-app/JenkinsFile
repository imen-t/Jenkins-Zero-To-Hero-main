pipeline {
    agent {
        docker {
            image 'abhishekf5/maven-abhishek-docker-agent:v1'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    stages {
        stage('Nettoyage & Préparation') {
            steps {
                sh 'mvn clean'
                sh 'echo "Lancement du pipeline pour imen27 sur l\'IP 192.168.56.10"'
            }
        }

        stage('Build & Tests') {
            steps {
                sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn package -DskipTests'
            }
        }

        stage('Analyse SonarQube') {
            environment {
                SONAR_URL = "http://192.168.56.10:9000"
            }
            steps {
                withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
                    sh '''
                        cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && \
                        mvn sonar:sonar \
                        -Dsonar.login=$SONAR_AUTH_TOKEN \
                        -Dsonar.host.url=${SONAR_URL} \
                        -Dsonar.projectKey=spring-boot-app
                    '''
                }
            }
        }

        stage('Dépôt sur Nexus') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'nexus-credentials', passwordVariable: 'NEXUS_PASSWORD', usernameVariable: 'NEXUS_USERNAME')]) {
                    sh '''
                        cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && \
                        mvn deploy -DskipTests \
                        -DaltDeploymentRepository=nexus::default::http://192.168.56.10:8081/repository/maven-releases/ \
                        -Dusername=$NEXUS_USERNAME -Dpassword=$NEXUS_PASSWORD
                    '''
                }
            }
        }

        stage('Docker Build & Push') {
            environment {
                DOCKER_IMAGE = "imen27/ultimate-cicd:${BUILD_NUMBER}"
            }
            steps {
                script {
                    sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && docker build -t ${DOCKER_IMAGE} .'
                    docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                        docker.image("${DOCKER_IMAGE}").push()
                    }
                }
            }
        }

        stage('Mise à jour GitOps (Deployment)') {
            environment {
                GIT_REPO = "Jenkins-Zero-To-Hero-main"
                GIT_USER = "imen-t"
            }
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    sh '''
                        git config user.email "torjmenimen01@gmail.com"
                        git config user.name "imen-t" 
                        sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                        git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                        git commit -m "Update image to version ${BUILD_NUMBER} [skip ci]"
                        git push https://${GITHUB_TOKEN}@github.com/${GIT_USER}/${GIT_REPO}.git HEAD:main
                    '''
                }
            }
        }
    }

    post {
        always {
            sh 'docker logout'
        }
    }
}
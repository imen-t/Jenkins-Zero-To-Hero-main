pipeline {
    agent any 

    stages {
        stage('Nettoyage & Préparation') {
            agent { docker { image 'maven:3.8.6-eclipse-temurin-17' } }
            steps {
                sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean'
            }
        }

        stage('Build & Tests') {
            agent { docker { image 'maven:3.8.6-eclipse-temurin-17' } }
            steps {
                sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn package -DskipTests'
            }
        }

        stage('Analyse SonarQube') {
            agent { docker { image 'maven:3.8.6-eclipse-temurin-17' } }
            environment {
                SONAR_URL = "http://192.168.56.10:9000"
            }
            steps {
                withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
                    sh '''
                        cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && \
                        mvn sonar:sonar \
                        -Dsonar.login=$SONAR_AUTH_TOKEN \
                        -Dsonar.host.url=${SONAR_URL} \
                        -Dsonar.projectKey=spring-boot-app
                    '''
                }
            }
        }

        stage('Dépôt sur Nexus') {
            agent { docker { image 'maven:3.8.6-eclipse-temurin-17' } }
            steps {
                withCredentials([usernamePassword(credentialsId: 'nexus-credentials', passwordVariable: 'NEXUS_PASSWORD', usernameVariable: 'NEXUS_USERNAME')]) {
                    sh '''
                        cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                        echo "<settings xmlns='http://maven.apache.org/SETTINGS/1.0.0' \
                              xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' \
                              xsi:schemaLocation='http://maven.apache.org/SETTINGS/1.0.0 \
                              https://maven.apache.org/xsd/settings-1.0.0.xsd'> \
                              <servers> \
                                <server> \
                                  <id>nexus</id> \
                                  <username>${NEXUS_USERNAME}</username> \
                                  <password>${NEXUS_PASSWORD}</password> \
                                </server> \
                              </servers> \
                            </settings>" > nexus_settings.xml
                        mvn deploy -s nexus_settings.xml -DskipTests \
                        -DaltDeploymentRepository=nexus::default::http://192.168.56.10:8081/repository/maven-releases/
                    '''
                }
            }
        }

        stage('Docker Build & Push') {
            environment {
                DOCKER_IMAGE = "imen27/ultimate-cicd:${BUILD_NUMBER}"
            }
            steps {
                script {
                    sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && docker build -t ${DOCKER_IMAGE} .'
                    withCredentials([usernamePassword(credentialsId: 'docker-cred', passwordVariable: 'DOCKER_PASS', usernameVariable: 'DOCKER_USER')]) {
                        sh "docker login -u ${DOCKER_USER} -p ${DOCKER_PASS}"
                        sh "docker push ${DOCKER_IMAGE}"
                    }
                }
            }
        }

        stage('Mise à jour GitOps') {
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    sh '''
                        git config user.email "torjmenimen01@gmail.com"
                        git config user.name "imen-t" 
                        sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                        git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                        git commit -m "Update image to version ${BUILD_NUMBER} [skip ci]"
                        git push https://${GITHUB_TOKEN}@github.com/imen-t/Jenkins-Zero-To-Hero-main.git HEAD:main
                    '''
                }
            }
        }
    }

    post {
        always {
            script {
                try {
                    sh 'docker logout'
                } catch (e) {
                    echo "Cleanup: Docker already logged out."
                }
            }
        }
    }
}